<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sk.henrichg.phoneprofilesplusextender"
    android:versionCode="72"
    android:versionName="2.0b" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="27" />

    <permission
        android:name="sk.henrichg.phoneprofilesplusextender.ACCESSIBILITY_SERVICE_PERMISSION"
        android:label="@string/extender_accessibility_service_permission"
        android:protectionLevel="signature" />

    <uses-permission android:name="sk.henrichg.phoneprofilesplusextender.ACCESSIBILITY_SERVICE_PERMISSION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="sk.henrichg.phoneprofilesplusextender.PPPEApplication"
        android:allowBackup="false"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/extender_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- Fabric key -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="795384c10c1c3eec6489c1d2fcf5e444d013da7d" />

        <activity android:name="sk.henrichg.phoneprofilesplusextender.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sk.henrichg.phoneprofilesplusextender.ForceStopActivity"
            android:excludeFromRecents="true"
            android:label="@string/empty_string"
            android:screenOrientation="nosensor"
            android:theme="@style/EmptyAppCompatActivity" >
        </activity>

        <service
            android:name="sk.henrichg.phoneprofilesplusextender.PPPEAccessibilityService"
            android:label="@string/extender_app_name"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE" >
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibilityservice" />
        </service>
        <service
            android:name="sk.henrichg.phoneprofilesplusextender.ForceCloseIntentService"
            android:exported="false" />

        <provider
            android:name="com.crashlytics.android.CrashlyticsInitProvider"
            android:authorities="sk.henrichg.phoneprofilesplusextender.crashlyticsinitprovider"
            android:exported="false"
            android:initOrder="100" />
    </application>

</manifest>